<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PersonalDictionary"
             x:Class="PersonalDictionary.MainPage">
    <ContentPage.Content>
        <StackLayout Padding="5">

            <StackLayout Orientation="Horizontal" Padding="10" >
                <Entry x:Name="searchEntry" Placeholder="search for word" HorizontalOptions="FillAndExpand"/>

                <ImageButton x:Name="searchButton" Source="https://cdn2.iconfinder.com/data/icons/media-and-navigation-buttons-square/512/Button_15-512.png" HorizontalOptions="End" WidthRequest="50"  Clicked="SearchButton_Clicked"/>

            </StackLayout>

            <Label x:Name="translatedWord" Text="translatedword" IsVisible="True" Margin="20"></Label>
            
            <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand" Padding="5">
                <Button x:Name="switchButton" Text="TR > EN" WidthRequest="190" Clicked="SwitchButton_Clicked"/>
                <Button x:Name="configButton" Text="CONFIG" WidthRequest="190" Clicked="ConfigButton_Clicked"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
